<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="menu.MenuFragment">

    <!--TODO replace background-->
    <Button
        android:id="@+id/menu_play_button"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="@string/menu_to_fight_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/menu_play_online_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menu_play_online_button"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="@string/menu_to_fight_online_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/menu_play_button"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    TODO replace placeholder icons-->
    <ImageButton
        android:id="@+id/music_volume_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_lock_silent_mode_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="48dp" />

    <ImageButton
        android:id="@+id/effect_volume_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_lock_silent_mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="418dp"
        tools:layout_editor_absoluteY="39dp" />

    <SeekBar
        android:id="@+id/music_seekBar"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:background="@color/design_default_color_secondary"
        android:progressTint="@color/design_default_color_primary"
        android:thumbTint="@color/design_default_color_primary"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/music_volume_btn"
        app:layout_constraintStart_toEndOf="@id/music_volume_btn"
        app:layout_constraintTop_toTopOf="@id/music_volume_btn" />

    <SeekBar
        android:id="@+id/effect_seekBar"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:background="@color/design_default_color_secondary"
        android:progressTint="@color/design_default_color_primary"
        android:thumbTint="@color/design_default_color_primary"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/effect_volume_btn"
        app:layout_constraintEnd_toStartOf="@id/effect_volume_btn"
        app:layout_constraintTop_toTopOf="@id/effect_volume_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>